<UserControl xmlns:input="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Input"  x:Class="Elements.ProductAutoComplete"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"  Loaded="UserControl_Loaded"
    >
    <StackPanel x:Name="LayoutRoot" Background="White" >
        <TextBlock FontWeight="Bold" Foreground="#FF9C0000"  Margin="10,10,5,0">AutoCompleteBox Example</TextBlock>
        <StackPanel Orientation="Horizontal">
            <TextBlock Margin="5" VerticalAlignment="Center">Product:</TextBlock>
            <input:AutoCompleteBox Width="220" Margin="5" x:Name="acbProduct"></input:AutoCompleteBox>
        </StackPanel>
        <TextBlock FontWeight="Bold" Foreground="#FF9C0000"  Margin="10,10,5,0">Ordinary ComboBox Example</TextBlock>
        <StackPanel Orientation="Horizontal">
            <TextBlock Margin="5" VerticalAlignment="Center">Product:</TextBlock>
            <ComboBox Width="220" Margin="5" x:Name="lstProduct"></ComboBox>
        </StackPanel>
    </StackPanel>
</UserControl>
